<AnchorPane styleClass="anchorpane" stylesheets="masterStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CreateGameController">
   <children>
      <TextField fx:id="name" layoutX="216.0" layoutY="62.0" promptText="Name..." />
      <Label layoutX="280.0" layoutY="41.0" text="Name" />
      <RadioButton fx:id="twoDim" layoutX="43.0" layoutY="136.0" mnemonicParsing="false" text="2D" />
      <RadioButton fx:id="threeDim" layoutX="113.0" layoutY="136.0" mnemonicParsing="false" text="3D" />
